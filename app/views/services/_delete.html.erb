<div class="modal-header">
  <h3>Delete Service</h3>
</div>
<div class="modal-body">
<ul class="errors"></ul>
Are you sure you wish to delete <b><%= @service.name %></b>?
</div>
<div class="modal-footer">
  <%= link_to "Yes, Delete This Service", service_path(@service), method: :delete, remote: true, class: "btn btn-danger" %>
  <%= link_to "No, Please Don't", "#", class: "btn", data: { dismiss: "modal" } %>
</div>
