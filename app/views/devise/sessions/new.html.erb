<div id="control_panel_login_contraner">
	<h2>Control Panel Login</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div>
		<%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'form_field' %></div>

		<div>
			<%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form_field' %></div>

		<% if devise_mapping.rememberable? -%>
			<div id="login_form_checkmark"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

		<div><%= f.submit "Sign in", class: 'btn btn-large' %></div>
	<% end %>
</div>