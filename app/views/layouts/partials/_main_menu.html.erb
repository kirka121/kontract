<ul class="nav">
	<li class="active"><%= link_to "Home", root_path %></li>
	<% if yield_site_settings.services_active %>
		<li><%= link_to "Services", services_path %></li>
	<% end %>
	<% if yield_site_sections.count > 0 %>
		<% yield_site_sections.each do |section| %>
			<% if section.enabled && section.subpages.count > 0%>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= section.title %><span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<% section.subpages.each do |page| %>
							<% if page.active %>
								<li><%= link_to page.link_header.capitalize, spid_path(page) %></li>
							<% end %>
						<% end %>
						<li class="divider"></li>
						<li><a href="#">One more separated link</a></li>
					</ul>
				</li>
			<% end %>
		<% end %>
	<% end %>
	<li><%= link_to "Contact", contact_path %></li>
	<li>
		<% if user_signed_in? %>
			<%= link_to "Control Panel", admin_path %>
		<% else %>
			<%= link_to "Login", login_path %>
		<% end %>
	</li>
</ul>
