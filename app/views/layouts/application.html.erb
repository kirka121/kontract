<!DOCTYPE html>
<html>
<head>
	<title>Kirka</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<!-- TODO: \/ figure out a better way to filuter out control panel yield vs visitor / client yield -->
	<% if (controller_name=='sessions' && action_name=='new') || controller_name=='admin' || controller_name=='subpages' %>
		<%= yield %>
		<%= debug(params) if Rails.env.development? %>
	<% else %>
		<%= render 'layouts/partials/header' %>
		<div id="main_contrainer">
			<%= notice %>
			<%= alert %>
			
			<%= yield %>
			<%= debug(params) if Rails.env.development? %>
		</div>
		<%= render 'layouts/partials/footer' %>
	<% end %>
	
</body>
</html>
