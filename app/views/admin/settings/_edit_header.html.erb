<script type="text/javascript">
	$('input.table_switch_checkbox').bootstrapSwitch();
</script>

<div class="modal-header">
  <h3><%= "Editing Header Settings" %></h3>
</div>

<%= form_for @settings, remote: true, url: {action: "update_header"}, html: { class: "default_update_form"}, :builder => Judge::FormBuilder do |f| %>
	<table class='standard_form_table'>
		<tr>
			<td class="table_input_label"><%= f.label :header_enabled,class: 'input_label' %></td>
			<td class="table_input_checkbox"><%=f.check_box :header_enabled, class: 'table_switch_checkbox' %></td>
		</tr>
		<tr>
			<td class="table_input_label"><%= f.label :header_mode,class: 'input_label' %></td>
			<%= f.hidden_field :header_mode %>
			<td class="table_input_field">
				<div class="btn-group">
					<% header_modes.each do |option| %>
					  <button type="button" class="btn btn-default headermode <%= 'active' if option[1] == yield_site_settings.header_mode %>" value="<%= option[1] %>"><%= option[0] %></button>
				  	<% end %>
				</div>
			</td>
		</tr>
		<tr>
			<td class="table_input_label"><%= f.label :header_fade,class: 'input_label' %></td>
			<td class="table_input_field"><%= f.text_field :header_fade, validate: true, class: 'input_field' %></td>
		</tr>
		<tr>
			<td class="table_button"colspan="100%"><%= f.submit "Update", class: "btn btn-large btn-submit" %></td>
		</tr>
	</table>
<% end %>