#control_panel_login_contraner{
	width: 500px;
	height: 200px;
	border: 1px solid black;
	position: absolute;
	top:0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	text-align: center;
	background-color: rgba(0,0,0,0.8);
	input{
		width: 450px;
	}
	h2{
		color: white;
	}
	#login_button_contrainer{
		width: 460px;
		text-align: left;
		margin-left: 20px;
		#login_button{
			width: 300px;
		}
		input#user_remember_me{
			width: 20px;
			margin: 0;
			padding: 0;
		}
		label{
			width: 100px;
			display: inline;
			text-transform: uppercase;
			font-size: 10px;
			margin-right: 50px;
			color: white;
		}
		#login_button_contrainer_remember_me{
			width: 120px;
			display: inline;
		}
	}
}

table#flash_proper_spacing{
	width: 100%;
	td#picture{
		width: 45px;
	}
	td#header{
		width: 60px;
	}
}

.field_with_errors{
	input{
		border: 1px dotted red;
	}
}